{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],

    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,                 // enable strict mode for safety
    "esModuleInterop": true,
    "skipLibCheck": true,           // avoids errors in node_modules

    "allowJs": false,
    "checkJs": false,

    "types": ["node"],              // ensures Node globals like JSON, Buffer, process
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


  